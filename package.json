{
  "name": "mvp-woke-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "test": "jest --passWithNoTests --forceExit --detectOpenHandles",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:push": "npm test -- --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/."
    ]
  },
  "keywords": [
    "JavaScript",
    "TypeScript",
    "API RESTful",
    "Docker",
    "Express",
    "MongoDB",
    "Node.js",
    "CRUD",
    "API"
  ],
  "author": "Luiz Felipe Gois",
  "license": "ISC",
  "description": "API construída como exercício de desafio técnico da Woke. Leia o README para mais detalhes.",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
